@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1a1a2e, #2a2a40);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" opacity="0.2"><path d="M0 50h10v-10h10v20h10v-30h10v40h10v-25h10v10h10v-20h10v30h10v-40h10v25h10v-10h10" stroke="%23ffffff" stroke-width="2" fill="none"/></svg>') repeat;
                z-index: -1;
            }

        .login-box {
            width: 100%;
            max-width: 420px;
            background: #2a2a40;
            padding: 2.5rem;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(107, 72, 255, 0.2);
            transition: transform 0.3s ease;
        }

            .login-box:hover {
                transform: translateY(-5px);
            }

            .login-box::after {
                content: '\f001';
                font-family: 'Font Awesome 6 Free';
                font-weight: 900;
                position: absolute;
                bottom: -50px;
                right: -50px;
                font-size: 120px;
                color: rgba(107, 72, 255, 0.1);
                transform: rotate(15deg);
            }

        .logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .logo img {
                max-width: 120px;
                transition: transform 0.3s ease;
            }

        .login-box:hover .logo img {
            transform: scale(1.1);
        }

        .login-title {
            color: #e0d8f3;
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            background: linear-gradient(45deg, #6b48ff, #a88bff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-control {
            background: #3a3a5a;
            border: 1px solid #6b48ff;
            border-radius: 8px;
            color: #e0d8f3;
            padding: 0.75rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background: #4a4a6f;
                border-color: #a88bff;
                color: #fff;
                box-shadow: 0 0 8px rgba(107, 72, 255, 0.3);
                outline: none;
            }

            .form-control::placeholder {
                color: #b19cd9;
            }

        .form-label {
            color: #e0d8f3;
            font-size: 0.9rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

            .form-label i {
                margin-right: 0.5rem;
                color: #6b48ff;
            }

        .btn-primary {
            background: #6b48ff;
            border: none;
            padding: 0.75rem;
            font-size: 0.95rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: #5a3ce6;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(107, 72, 255, 0.3);
            }

            .btn-primary i {
                margin-right: 0.5rem;
            }

        .error-message {
            color: #dc3545;
            background: rgba(220, 53, 69, 0.1);
            padding: 0.75rem;
            border-radius: 8px;
            text-align: center;
            font-size: 0.9rem;
            margin-top: 1rem;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        .invalid-feedback {
            font-size: 0.85rem;
            color: #dc3545;
        }

        .was-validated .form-control:invalid {
            border-color: #dc3545;
            background-image: none;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <div class="logo">
            <img src="~/Content/Upload/Image/Icon/music.png" alt="My Music Logo" />
        </div>
        <h2 class="login-title">Đăng nhập</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { autocomplete = "off", @class = "needs-validation", novalidate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-user"></i>Tên đăng nhập</label>
                @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập", required = "required", autocomplete = "off" })
                <div class="invalid-feedback">Vui lòng nhập tên đăng nhập.</div>
            </div>
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-lock"></i>Mật khẩu</label>
                @Html.Password("password", null, new { @class = "form-control", placeholder = "Nhập mật khẩu", required = "required", autocomplete = "new-password" })
                <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i>Đăng nhập</button>
            @Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "btn btn-outline-light mt-3 w-100" })




            if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <p class="error-message">@ViewBag.Error</p>
            }
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>
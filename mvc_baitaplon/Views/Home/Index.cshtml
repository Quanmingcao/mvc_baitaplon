@model IEnumerable<mvc_baitaplon.Models.Song>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid p-0">
    <!-- Top Songs Section -->
    <div class="top-songs-section mb-5">
        <h3 class="section-title">Top bài hát nhiều lượt xem</h3>
        <div class="song-list-container">
            <div class="song-list">
                @foreach (var song in Model.OrderByDescending(s => s.Views).Take(10))
                {
                    <div class="song-card">
                        <img src="@Url.Content("~/Content/Upload/Image/CoverImage/Song/" + song.CoverImage)"
                             alt="Ảnh bìa bài hát"
                             onerror="this.onerror=null;this.src='@Url.Content("~/Content/Upload/Image/CoverImage/Song/placeholder.jpg")';"
                             class="song-cover" />

                        <a href="javascript:void(0);"
                           class="card-play-button"
                           onclick="playSong('@song.Title', '@Url.Content("~/Content/Upload/Music_file/" + song.FilePath)','@song.SongID', '@Url.Content("~/Content/Upload/Image/CoverImage/Song/" + song.CoverImage)',' @song.Account.Username','@song.AccountID')"
                           title="Phát bài hát">
                            <i class="fas fa-play"></i>
                        </a>

                        <div class="song-info">
                            <span class="song-title">@song.Title</span>
                            <span class="song-title" style="font-size: 10px">@song.Account.Username</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <h2 class="section-title mt-5">Danh sách bài hát mới</h2>
    <div class="new-songs-grid">
        @foreach (var song in Model.OrderByDescending(s => s.UploadDate).Take(12))
        {
            <div class="song-item-card">
                <a href="@Url.Action("Details", "Songs", new { id = song.SongID })" class="song-image-link">
                    <img src="@Url.Content("~/Content/Upload/Image/CoverImage/Song/" + song.CoverImage)"
                         alt="Ảnh bìa bài hát"
                         onerror="this.onerror=null;this.src='@Url.Content("~/images/ImagesSong/plhld.jpg")';"
                         style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;" />
                </a>
                <div class="song-details">
                    <h4 class="song-title">
                        <a href="@Url.Action("Details", "Home", new { id = song.SongID })" style="text-decoration:none; color:inherit;">
                            @song.Title
                        </a>
                    </h4>
                    <p class="song-meta">Người đăng: <span>@song.Account.Username</span></p>
                    <p class="song-meta">Lượt xem: <span>@song.Views</span></p>
                </div>
            </div>
        }
    </div>
    @Html.Partial("_MusicPlayer")

</div>

<style>
    .container-fluid {
        padding: 0 2rem;
    }

    .top-songs-section {
        margin-top: 80px;
    }

    .section-title {
        color: #d4c4e8;
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border-left: 5px solid #6b48ff;
        padding-left: 1rem;
    }

    .song-list-container {
        overflow-x: auto;
        overflow-y: hidden;
        padding: 0.5rem;
        scrollbar-width: thin;
        scrollbar-color: #6b48ff #2a2a40;
    }

        .song-list-container::-webkit-scrollbar {
            height: 8px;
        }

        .song-list-container::-webkit-scrollbar-track {
            background: #2a2a40;
        }

        .song-list-container::-webkit-scrollbar-thumb {
            background: #6b48ff;
            border-radius: 4px;
        }

            .song-list-container::-webkit-scrollbar-thumb:hover {
                background: #5a3ce6;
            }

    .song-image-container {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        width: 100%;
        height: 160px;
    }

    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 2rem;
        color: white;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 0.7rem;
        border-radius: 50%;
        opacity: 0;
        transition: opacity 0.3s ease;
        text-decoration: none;
        z-index: 10;
    }

    .song-image-container:hover .play-button {
        opacity: 1;
    }

    .song-cover {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .song-image-container:hover .song-cover {
        transform: scale(1.05);
    }


    .song-list {
        display: flex;
        gap: 1.5rem;
        width: max-content;
    }

    .song-card {
        position: relative;
        background: linear-gradient(90deg, #2a2a40, #3f3f5f);
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        width: 250px;
        height: 250px;
        transition: transform 0.3s, box-shadow 0.3s;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

        .song-card img {
            border-radius: 10px;
            height: 200px
        }

        .song-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 12px rgba(107, 72, 255, 0.3);
        }

    .card-play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 3rem;
        color: #6b48ff;
        border: 5px solid #6b48ff;
        padding: 0;
        border-radius: 50%;
        text-decoration: none;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 5;
        width: 5rem;
        height: 5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: transparent;
    }

    .song-card:hover .card-play-button {
        opacity: 1;
    }



    .song-cover {
        width: 100%;
        height: 160px;
        object-fit: cover;
        padding: 10px;
        border-radius: 10px;
    }

    .song-info {
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .song-title {
        color: #d4c4e8;
        font-size: 1.1rem;
        font-weight: 500;
        white-space: normal;
        word-break: break-word;
    }

    .song-views {
        background-color: #6b48ff;
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        align-self: flex-start;
    }

    .new-songs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .song-item-card {
        background: linear-gradient(90deg, #2a2a40, #3f3f5f);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .song-item-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 12px rgba(107, 72, 255, 0.3);
        }

    .song-image-link {
        display: block;
        text-decoration: none;
    }

    .song-details {
        padding: 1rem;
    }

    .song-meta {
        color: #b19cd9;
        font-size: 0.9rem;
        margin: 0.25rem 0;
    }

        .song-meta span {
            color: #d4c4e8;
            font-weight: 500;
        }
</style>

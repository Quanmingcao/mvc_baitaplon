@model List<mvc_baitaplon.Models.Songs>

<div class="bg-dark text-white rounded p-3 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Billboard Topchart</h5>
        <a href="#" class="text-info">See All</a>
    </div>
    <div class="d-flex overflow-auto">
        @foreach (var song in Model)
        {
            var imagePath = Url.Content("~/images/" + song.Title + ".jpg");
            <div class="text-center me-3">
                <img src="@imagePath" height="100" width="100" class="rounded mb-2" alt="@song.Title" />
                <div>@song.Title</div>
                <small>@song.Views lượt xem</small>
            </div>
        }
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music Web</title>

    <link href="~/css/Styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            background: linear-gradient(180deg, #1a1a2e 0%, #2a2a40 100%);
            color: #e0d8f3;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .header-container {
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            padding-top: 80px;
            z-index: 1000;
            height: 80px;
            padding: 1rem 2rem;
            background: linear-gradient(90deg, #2a2a40, #3f3f5f);
            border-bottom: 1px solid #4a4a6f;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
        }

        .search-bar {
            flex-grow: 1;
            margin-left: 2rem;
        }

            .search-bar input {
                width: 100%;
                max-width: 400px;
                padding: 0.6rem 1rem;
                border-radius: 30px;
                background-color: #3f3f5f;
                border: none;
                color: #fff;
                font-size: 1rem;
                transition: background-color 0.3s ease;
            }

                .search-bar input:focus {
                    background-color: #4f4f75;
                    outline: none;
                }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            background-color: #1c1c2e;
            padding-top: 100px;
            box-shadow: 2px 0 6px rgba(0, 0, 0, 0.4);
            overflow-y: auto;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 0.85rem 1.5rem;
                color: #b19cd9;
                text-decoration: none;
                transition: background-color 0.3s, color 0.3s, transform 0.2s;
                font-size: 1rem;
            }

                .sidebar a i {
                    width: 28px;
                    height: 28px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    border-radius: 50%;
                    background-color: #3f3f5f;
                    margin-right: 1.2rem;
                    font-size: 1.1rem;
                    transition: background-color 0.3s;
                }

                .sidebar a:hover {
                    color: #d4c4e8;
                    background-color: #2a2a40;
                    transform: translateX(5px);
                }

                    .sidebar a:hover i {
                        background-color: #4a4a6f;
                    }

                .sidebar a.active {
                    color: #6b48ff;
                    background-color: #3f3f5f;
                    font-weight: 600;
                }

                    .sidebar a.active i {
                        background-color: #5a3ce6;
                    }



        .main-container {
            display: flex;
        }

        .content-area {
            margin-left: 220px;
            padding-top: 100px; /* <-- 80px (header) + khoảng cách nhỏ */
            padding: 2rem;
            flex: 1;
            background-color: transparent;
            min-height: calc(100vh - 80px);
        }

        footer {
            margin-left: 220px;
            background: linear-gradient(90deg, #2a2a40, #3f3f5f);
            color: #b19cd9;
            text-align: center;
            padding: 1.2rem;
            border-top: 1px solid #4a4a6f;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .header-container {
                left: 0;
            }

            .content-area,
            footer {
                margin-left: 0;
            }

            .search-bar input {
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="main-container">
        <nav class="sidebar">
            <a href="/" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"><i class="bi bi-house-door"></i> Trang chủ</a>
            <a href="/Songs" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Songs" ? "active" : "")"><i class="bi bi-music-note"></i> Bài hát</a>
            <a href="~/Collections/Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Collections" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"><i class="bi bi-collection"></i> Collections</a>
            @{
                var accountId = Session["AccountID"] as int?;
            }
            @if (accountId != null)
            {
                <a href="@Url.Action("Profile", "Account", new { id = accountId })" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                    <i class="bi bi-person"></i> Tài khoản
                </a>
            }
            <a href="@Url.Action("Index", "Library", new { userId = Session["UserID"] })" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Collections" && ViewContext.RouteData.Values["Action"]?.ToString() == "UserCollections" ? "active" : "")"><i class="bi bi-music-note-list"></i> Thư viện của tôi</a>
            <a href="/Accounts" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Accounts" ? "active" : "")"><i class="bi bi-cloud-download"></i> Tải nhạc</a>
        </nav>

        <div class="content-area">
            <div class="header-container">
                <h4 style="margin: 0; font-weight: 600;">Music Web</h4>
                <div class="search-bar">
                    <input type="text" placeholder="Tìm kiếm bài hát..." />
                </div>
                <div class="user-info text-end ms-3">
                    @if (Session["Username"] != null)
                    {

                        <a class="nav-link" href="@Url.Action("Index", "UserProfile", new { id = Session["accountId"] })">
                            @Session["Username"]
                        </a> <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-light ms-2">Đăng xuất</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-light">Đăng nhập</a>
                    }
                </div>
            </div>
            <div style="height: 100px;"></div>
            @RenderBody()
        </div>
    </div>

    <footer>
        © 2025 - Music Web | Liên hệ: admin@example.com
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

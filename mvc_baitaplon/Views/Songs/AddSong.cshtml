@model mvc_baitaplon.Models.Song

@{
    ViewBag.Title = "Add New Song";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="add-collection-container">

        <h2 class="section-title">Add New Song</h2>

        @using (Html.BeginForm("AddSong", "Songs", FormMethod.Post, new { enctype = "multipart/form-data", @class = "add-song-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("Collectionid", (int)ViewBag.Collectionid)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter song title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Genre", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("GenreID", ViewBag.GenreID as SelectList, "-- Select Genre --", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.GenreID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Cover Image", htmlAttributes: new { @class = "form-label" })
                <div class="custom-file-upload">
                    <label for="CoverImage" class="file-label">
                        <i class="fas fa-upload"></i> Choose Cover Image
                    </label>
                    <input type="file" id="CoverImage" name="CoverImage" class="form-control" accept="image/*" onchange="previewImage(event)" />
                    @Html.ValidationMessage("CoverImage", new { @class = "text-danger" })
                </div>
                <div class="image-preview mt-3">
                    <img id="coverPreview" src="#" alt="Image Preview" class="img-fluid" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Audio File", htmlAttributes: new { @class = "form-label" })
                <div class="custom-file-upload">
                    <label for="AudioFile" class="file-label">
                        <i class="fas fa-upload"></i> Choose Audio File
                    </label>
                    <input type="file" id="AudioFile" name="AudioFile" class="form-control" accept="audio/*" />
                    @Html.ValidationMessage("AudioFile", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Create Song</button>
                @Html.ActionLink("Back", "Index", new { id = (int)ViewBag.Collectionid }, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        }
    </div>
</div>

<style>
    :root {
        --primary-color: #7c3aed;
        --secondary-color: #a78bfa;
        --background-dark: #1f1f38;
        --card-bg: #2a2a4a;
        --text-primary: #f5f5ff;
        --text-secondary: #b0a8ff;
        --shadow: rgba(0, 0, 0, 0.3);
        --danger-color: #ff4d4f;
    }

    .container-fluid {
        padding: 2rem;
        min-height: 80vh;
        display: flex;
        justify-content: center;
    }

    .add-collection-container {
        width: 60%;
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 24px var(--shadow);
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 2rem;
        position: relative;
        padding-bottom: 0.5rem;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            border-radius: 2px;
        }

    .add-collection-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-label {
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-primary);
    }

    .form-control, .form-select {
        background: #3a3a5a;
        border: 1px solid #4a4a6a;
        color: var(--text-primary);
        border-radius: 8px;
        padding: 0.75rem;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 8px rgba(124, 58, 237, 0.3);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
            opacity: 0.7;
        }

    .custom-file-upload {
        position: relative;
        display: flex;
        align-items: center;
    }

    .file-label {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: var(--primary-color);
        color: var(--text-primary);
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .file-label:hover {
            background: var(--secondary-color);
        }

    .form-control[type="file"] {
        opacity: 0;
        position: absolute;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .image-preview {
        max-width: 300px;
    }

        .image-preview img {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
            border: 1px solid #4a4a6a;
            display: none;
            object-fit: cover;
        }

    .text-danger {
        font-size: 0.9rem;
        color: var(--danger-color);
        margin-top: 0.25rem;
    }

    .validation-summary .text-danger {
        background: rgba(255, 77, 79, 0.1);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .btn-primary {
        background: var(--primary-color);
        border: none;
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: var(--secondary-color);
            transform: translateY(-2px);
        }

    .btn-outline-secondary {
        border-color: var(--text-secondary);
        color: var(--text-secondary);
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        transition: border-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
    }

        .btn-outline-secondary:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .container-fluid {
            padding: 1.5rem;
        }

        .add-collection-container {
            padding: 1.5rem;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .form-control, .form-select {
            font-size: 0.95rem;
        }

        .form-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-primary, .btn-outline-secondary {
            padding: 0.75rem;
            text-align: center;
        }
    }

    @@media (max-width: 576px) {
        .container-fluid {
            padding: 1rem;
        }

        .section-title {
            font-size: 1.6rem;
        }

        .image-preview {
            max-width: 100%;
        }
    }
</style>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('coverPreview');
            const file = input.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        }
    </script>
}

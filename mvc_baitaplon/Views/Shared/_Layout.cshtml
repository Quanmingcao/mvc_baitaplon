<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Web Music</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<!-- Views/Shared/_Layout.cshtml -->
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar chiếm 2 cột bên trái, không có tính năng thu gọn -->
            <div class="col-2" style="background: linear-gradient(to bottom, #a86b2f, #000000); min-height: 100vh; padding: 10px;">
                @Html.Partial("sidebar")
            </div>

            <!-- Nội dung chính chiếm 10 cột bên phải -->
            <div class="col-10" style="background-color: #0d0d0d;">
                <div>
                    @Html.Partial("header")
                </div>
                <main class="p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @Html.Partial("footer")
</body>

</html>
